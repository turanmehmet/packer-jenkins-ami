      "instance_type": "t2.micro",
      "ssh_username": "centos",
      "ssh_keypair_name": "deployer-key",
      "ssh_private_key_file": "/home/ec2-user/.ssh/id_rsa",
      "source_ami_filter": {
         "filters": {
